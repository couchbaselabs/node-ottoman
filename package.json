{
  "name": "ottoman",
  "version": "2.0.0-pre-alpha.1",
  "main": "lib/index.js",
  "types": "lib/types/index.d.ts",
  "description": "ODM for Couchbase Node.js driver.",
  "keywords": [
    "couchbase",
    "odm",
    "nosql",
    "json",
    "document",
    "model",
    "schema",
    "database"
  ],
  "license": "Apache-2.0",
  "scripts": {
    "build": "rimraf ./lib && tsc",
    "build:test": "yarn build && yarn test",
    "commit": "git-cz",
    "dev": "tsc --watch --incremental",
    "dev:api": "OTTOMAN_CONNECTION_STRING='couchbase://localhost/travel-sample@admin:password' ts-node-dev --respawn api/index.ts",
    "docs": "yarn docs:generate && yarn docs:build",
    "docs:generate": "rimraf docs && typedoc",
    "docs:build": "cp -r .vuepress/* docs/.vuepress && cp -r vuepress/* docs/ && vuepress build docs",
    "docs:serve": "yarn docs && serve docs/.vuepress/dist",
    "is:ready": "yarn lint && yarn build:test",
    "lint": "eslint --ignore-pattern '/lib/' '*/**/*.ts' --quiet --fix",
    "test": "jest --clearCache && jest -i",
    "test:dev": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.5",
    "@typescript-eslint/eslint-plugin": "^3.0.1",
    "@typescript-eslint/parser": "^3.0.1",
    "@vuepress/plugin-back-to-top": "^1.5.0",
    "@vuepress/plugin-medium-zoom": "^1.5.0",
    "cz-conventional-changelog": "3.2.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "express": "^4.17.1",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.6",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.0.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "typedoc": "^0.17.7",
    "typedoc-plugin-markdown": "^2.2.17",
    "typescript": "^3.9.3",
    "vuepress": "^1.5.0"
  },
  "dependencies": {
    "couchbase": "^3.0.2",
    "jsonpath": "^1.0.2",
    "uuid": "^8.1.0"
  },
  "repository": {
    "type": "git",
    "url": "http://github.com/couchbaselabs/node-ottoman.git"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
